@model SimpleBlog.Areas.Admin.ViewModels.UsersIndex
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User</title>
</head>
<body>
    <div>
        <h1>USERs</h1>
        <a href="@Url.Action("New")" class=" btn btn-primary btn-sm"> <i class="glyphicon glyphicon-plus"> </i>Create User</a>
         
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var user in @Model.Users) { 
                
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>{ToDo}</td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Edit",new{user.Id})" class="btn btn-sm btn-primary">
                                     <i class="glyphicon glyphicon-edit"></i>
                                    Edit
                                </a>
                                <a href="@Url.Action("Reset",new{user.Id})" class="btn btn-sm btn-default">
                                    <i class="glyphicon glyphicon-lock"></i>
                                    Reset Password
                                </a>
                                <a href="@Url.Action("Delete",new{user.Id})" class="btn btn-sm btn-danger" data-post="Are you sure you want to delete @user.Username ?" >
                                    <i class="glyphicon glyphicon-remove"></i>
                                    Delete
                                </a>
                            </div> 

                        </td>
                    </tr>
               }
            </tbody>

        </table>
    </div>
</body>
</html>
