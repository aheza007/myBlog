@model SimpleBlog.Areas.Admin.ViewModels.ResetUserPassWord
<div>
    <h1>Change Password for @Model.UserName</h1>    
    @using (Html.BeginForm()) { 
        
        @Html.AntiForgeryToken() 
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(f=>f.PassWord)
            @Html.TextBoxFor(f=>f.PassWord,new {@class="form-control"})
        </div>

        <input type="submit" value="Change Password" class="btn btn-primary"/>
        <a href="@Url.Action("index")">or cancel</a>
    }
</div>


